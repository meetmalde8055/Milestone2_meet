<div class = "mt-2 d-flex justify-content-center">
    <form method="POST" action="/trades/<%= item.id%>?_method=PUT">
        <div>
            <div><label for="name">Name</label></div>
            <div><input type="text" id="name" name="title" value="<%=item.title%>" class = "fixed-width"></div>
        </div>
        <div>
            <div><label for="category">Category</label></div>
            <div><textarea rows="2" id="category" name="category" class = "fixed-width"><%=item.category%></textarea></div>
        </div>
        <div>
            <div><label for="details">Details</label></div>
            <div><textarea rows="5" id="details" name="details" class = "fixed-width"><%=item.details%></textarea></div>
        </div>
        <div>
            <div><label for="status">Status</label></div>
            <div><textarea rows="2" id="status" name="status" class = "fixed-width"><%=item.status%></textarea></div>
        </div>
        <div>
            <div>
            <button class="btn btn-success">Submit</button>
        </div>
    </form>

</div>
